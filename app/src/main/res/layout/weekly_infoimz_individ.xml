<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="right"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_medical" >

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/imu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_color"
        android:weightSum="12"
        android:gravity="left" >

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@drawable/back_arrow"
            android:id="@+id/back_btn" />


        <ImageButton

            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:src="@drawable/rollboxsprite_immun_admin"
            android:visibility="invisible"/>


        <ImageButton
            android:id="@+id/pre_madicare"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:src="@drawable/rollboxsprite_immun_admin" />

        <ImageButton
            android:id="@+id/pre_diet"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:src="@drawable/rollboxsprite_immun_desease" />



        <ImageButton

            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:src="@drawable/rollboxsprite_immun_admin"
            android:visibility="invisible"/>



        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:src="@drawable/next_arrow"
            android:id="@+id/next_btn" />
    </LinearLayout>

</LinearLayout>