        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignTop="@+id/closecaseimageView"-->
        <!--android:text="TextView" />-->

    <ImageView
        android:id="@+id/closecaseimageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/woman_name" />

    <TextView
        android:id="@+id/closetextViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/closecaseimageView"
        android:layout_toRightOf="@+id/closecaseimageView"
        android:text="Medium Text"
        android:padding="3dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
